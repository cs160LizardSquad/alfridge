function updateGroceryLists(){
	groceryListsColumn.empty();
	for(list in groceryLists){
		groceryListsColumn.add(new Label({string: groceryLists[list]}));
	}
}


/* skins and styles for groceryLists */
var searchBarSkin = new Skin({fill:"#5A6060", borders:{left:3, right:3, top:3, bottom:3}, stroke:"black"});
var groceryListsColumn = new Column({left: 0, right: 0, top: 50, bottom: 0, skin: whiteSkin, style: textStyle,
	contents: [
		new Label({string: "CORN"})
	]
});

var groceryListsEditColumn = new Column({left: 0, right: 0, top: 50, bottom: 0, skin: whiteSkin, style: textStyle,
	contents: [
		new Label({string: "CHEESE", style: textStyle})
	]
});

var searchBar = new Container({left: 0, right: 45, top: 0, skin: searchBarSkin});
var suggestions = new Container();

var groceryListsAddView = new Container({left: 0, right: 0, top: 50, skin: whiteSkin,
	contents: [
		groceryListsEditColumn
	]
});

var addButtonTemplate = BUTTONS.Button.template(function($){ return{
	height: 35, width:45, left:0, top: 0, 
	skin: darkgreySkin,
	contents:[
		new Label({left:10, top:2, height:30,  string:"+", style:new Style({font:"38px Petala Pro", color:"white"})})
	],
	behavior: Object.create(BUTTONS.ButtonBehavior.prototype, {
					onTap: { value:  function(content){
						application.add(groceryListsAddView);
						}}
					})
}});

var groceryListsListView = new Container({left: 0, right: 0, top:50, skin: whiteSkin, 
	contents: [
		searchBar,
		new addButtonTemplate(),
		suggestions,
		groceryListsColumn
		
	], 	
});